@model List<SCsms.Controllers.UserController.AthleteViewModel>

@{
    ViewBag.Title = "运动员信息管理";
    Layout = "~/Views/Shared/_FrontUser.cshtml";
}

<h2>运动员信息展示</h2>

<div class="container-fluid mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title text-center">查询运动员</h5>
                    <form id="filterForm" action="@Url.Action("AthletesIndex", "User")" method="post">
                        <div class="form-group row">
                            <label for="athleteName" class="col-sm-4 col-form-label">运动员姓名：</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="athleteName" name="athleteName" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="eventName" class="col-sm-4 col-form-label">比赛项目：</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="eventName" name="eventName" />
                            </div>
                        </div>
                        <div class="text-center">
                            <input type="submit" class="btn btn-primary" value="查询" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div style="margin-top: 20px; text-align: center;">
    <table id="athleteTable" style="border-collapse: collapse; width: 100%;" class="table table-striped">
        <!-- 表头等代码 -->
        <thead>
            <tr>
                <th style="border: 1px solid #dee2e6; padding: 10px;" scope="col">运动员编号</th>
                <th style="border: 1px solid #dee2e6; padding: 10px;" scope="col">参加项目</th>
                <th style="border: 1px solid #dee2e6; padding: 10px;" scope="col">比赛编号</th>
                <th style="border: 1px solid #dee2e6; padding: 10px;" scope="col">运动员名字</th>
                <th style="border: 1px solid #dee2e6; padding: 10px;" scope="col">运动员性别</th>
                <th style="border: 1px solid #dee2e6; padding: 10px;" scope="col">运动员预赛成绩</th>
                <th style="border: 1px solid #dee2e6; padding: 10px;" scope="col">运动员预赛情况</th>
                <th style="border: 1px solid #dee2e6; padding: 10px;" scope="col">运动员决赛成绩</th>
                <th style="border: 1px solid #dee2e6; padding: 10px;" scope="col">运动员决赛排名</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var athlete in Model)
            {
                <tr>
                    <td style="border: 1px solid #dee2e6; padding: 10px;">@athlete.AthleteID</td>
                    <td style="border: 1px solid #dee2e6; padding: 10px;">@athlete.EventName</td>
                    <td style="border: 1px solid #dee2e6; padding: 10px;">@athlete.EventID</td>
                    <td style="border: 1px solid #dee2e6; padding: 10px;">@athlete.UserName</td>
                    <td style="border: 1px solid #dee2e6; padding: 10px;">@athlete.Sex</td>
                    <td style="border: 1px solid #dee2e6; padding: 10px;">@athlete.Pre_Result</td>
                    <td style="border: 1px solid #dee2e6; padding: 10px;">@athlete.Pre_Sta</td>
                    <td style="border: 1px solid #dee2e6; padding: 10px;">@athlete.Fin_Result</td>
                    <td style="border: 1px solid #dee2e6; padding: 10px;">@athlete.Fin_Ranking</td>
                </tr>
            }
        </tbody>
    </table>
</div>

