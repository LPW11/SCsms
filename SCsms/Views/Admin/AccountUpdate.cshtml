@model SCsms.Models.Users

@{
    ViewBag.Title = "账号修改";
    Layout = "~/Views/Shared/_BackAdmin.cshtml";
}

<div style="margin-top: 50px; text-align: center;">
    <form action="/Admin/AccountUpdate" method="post" onsubmit="return checkForm()">
        <table style="border-collapse: collapse; width: 100%;">
            <thead>
                <tr>
                    <th style="border: 1px solid #dee2e6; padding: 10px;">用户编号</th>
                    <th style="border: 1px solid #dee2e6; padding: 10px;">用户名</th>
                    <th style="border: 1px solid #dee2e6; padding: 10px;">密码</th>
                    <th style="border: 1px solid #dee2e6; padding: 10px;">账户类型</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td style="border: 1px solid #dee2e6; padding: 10px;"><input type="text" name="AthleteID" value="@Model.UserID" class="form-control" /></td>
                    <td style="border: 1px solid #dee2e6; padding: 10px;"><input type="text" name="EventID" value="@Model.UserName" class="form-control" /></td>
                    <td style="border: 1px solid #dee2e6; padding: 10px;"><input type="text" name="UserName" value="@Model.Password" class="form-control" /></td>
                    <td style="border: 1px solid #dee2e6; padding: 10px;"><input type="text" name="Sex" value="@Model.UserType" class="form-control" /></td>
                </tr>
            </tbody>

            <tr>
                <th style="text-align:center;">
                    <div class="text-center">
                        <input type="submit" class="btn btn-primary" value="修改" />
                    </div>
                    <h3 style="color:red;">@ViewBag.notice</h3>
                </th>
            </tr>
        </table>
    </form>


</div>
