@model SCsms.Models.Events

@{
    ViewBag.Title = "比赛编辑管理";
    Layout = "~/Views/Shared/_BackAdmin.cshtml";
}


<div style="margin-top: 50px; text-align: center;">
    <form action="/Admin/EventsUpdate" method="post" onsubmit="return checkForm()">
        <table style="border-collapse: collapse; width: 100%;">
            <thead>
                <tr>
                    <th style="border: 1px solid #dee2e6; padding: 10px;">比赛编号</th>
                    <th style="border: 1px solid #dee2e6; padding: 10px;">比赛名字</th>
                    <th style="border: 1px solid #dee2e6; padding: 10px;">比赛开始时间</th>
                    <th style="border: 1px solid #dee2e6; padding: 10px;">比赛最大人数</th>
                    <th style="border: 1px solid #dee2e6; padding: 10px;">比赛组别</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td style="border: 1px solid #dee2e6; padding: 10px;"><input type="text" name="EventID" value="@Model.EventID" class="form-control" /></td>
                    <td style="border: 1px solid #dee2e6; padding: 10px;"><input type="text" name="EventName" value="@Model.EventName" class="form-control" /></td>
                    <td style="border: 1px solid #dee2e6; padding: 10px;"><input type="datetime-local" name="EventDate" value="@Model.EventDate" class="form-control" /></td>
                    <td style="border: 1px solid #dee2e6; padding: 10px;"><input type="text" name="MaxParticipants" value="@Model.MaxParticipants" class="form-control" /></td>
                    <td style="border: 1px solid #dee2e6; padding: 10px;"><input type="text" name="EventGroup" value="@Model.EventGroup" class="form-control" /></td>
                </tr>
            </tbody>

            <tr>
                <th style="text-align:center;">
                    <div class="text-center">
                        <input type="submit" class="btn btn-primary" value="修改" />
                    </div>
                    <h3 style="color:red;">@ViewBag.notice</h3>
                </th>
            </tr>
        </table>
    </form>


</div>
<script>


</script>